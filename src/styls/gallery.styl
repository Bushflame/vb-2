#gallery 

.gallery
    max-width 720px
    margin auto
    background #fff
.main-img
.main-img img
    width 100%
.imgs .box
    width 100%
.imgs img
    width 100%
.gallery
     max-width 960px
     display grid
     grid-template-columns repeat(4,1fr)
     grid-template-rows 3
     grid-gap .1rem

     div:nth-child(1)
        grid-column 1/5
        grid-row 1
     div:nth-child(2)
        grid-column 1/2
        grid-row 2       
     div:nth-child(3)
        grid-column 2/3
        grid-row 2
     div:nth-child(4)
        grid-column 3/4
        grid-row 2
     div:nth-child(5)
        grid-column 4/5
        grid-row 2
     div:nth-child(6)
        grid-column 1/2
        grid-row 3
     div:nth-child(7)
        grid-column 2/3
        grid-row 3
     div:nth-child(8)
        grid-column 3/4
        grid-row 3
     div:nth-child(9)
        grid-column 4/5
        grid-row 3
+above(780px)
    .gallery
        grid-template-columns repeat(6,1fr)
        grid-template-rows 4
        max-width 1020px
        div:nth-child(1)
            grid-column 2/6
            grid-row 1/5
        div:nth-child(2)
            grid-column 1/2
            grid-row 1
        div:nth-child(3)
            grid-column 1/2
            grid-row 2    
        div:nth-child(4)
            grid-column 1/2
            grid-row 3
        div:nth-child(5)
            grid-column 1/2
            grid-row 4
        div:nth-child(6)
            grid-column 6/7
            grid-row 1
        div:nth-child(7)
            grid-column 6/7
            grid-row 2    
        div:nth-child(8)
            grid-column 6/7
            grid-row 3
        div:nth-child(9)
            grid-column 6/7
            grid-row 4            

@keyframes fadeIn {
  from {
     transform scale(0)
    //  transform rotate(0deg)
  }
}
.fade-in {
    transform scale(1)
    // transform rotate(360deg)
    animation fadeIn 0.5s ease-in 1 forwards
}