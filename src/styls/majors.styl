#section_1 
    background #fff

.majors
    max-width 1280px
    margin auto
    .major 
        padding 1rem

        
    .major-body 
        font-size 1.2rem 
        line-height 1.4
    +above(780px)
        display grid
        grid-template-columns repeat(2, 1fr)
        grid-template-rows 3
        grid-gap 4rem
        align-items top 
        .major:nth-child(1)
            grid-column 1/3
            grid-row 1
        .major:nth-child(2)
            grid-column 1/3
            grid-row 2
        .major:nth-child(3)
            grid-column 1/2
            grid-row 3
        .major:nth-child(4)
            grid-column 2/3
            grid-row 3
        .major:nth-child(5)
            grid-column 1/3
            grid-row 4
        .major:nth-child(6)
            grid-column 1/3
            grid-row 5
    +above(1020px)
        grid-template-columns repeat(6, 1fr)
        grid-template-rows 6

        .major:nth-child(1)
            grid-column 1/5
            grid-row 1
        .major:nth-child(2)
            grid-column 1/5
            grid-row 2/5
        .major:nth-child(3)
            grid-column 5/7
            grid-row 1/3
        .major:nth-child(4)
            grid-column 5/7
            grid-row 3/5
        .major:nth-child(5)
            grid-column 1/4
            grid-row 6
            display flex 
            flex-direction row
            .major-img
                width 50%
                padding-right 1rem
            .major-text 
                width 50%
        .major:nth-child(6)
            grid-column 4/7
            grid-row 6
            display flex 
            flex-direction row   
            .major-img
                width 50%
                padding-right 1rem 
            .major-text 
                width 50%                