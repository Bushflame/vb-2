#section-1  
    article 
        max-width 1280px
        margin auto

        +above(720px)
            display grid
            grid-template-columns repeat(2, 1fr)
            grid-template-rows 4
            grid-gap 2rem
        +above(1020px)
            display grid
            grid-template-columns repeat(16, 1fr)
            grid-template-rows 4
