#section-5
    padding-top 0 
    background rgba($val,1)
    background linear-gradient(top,#fff, $val)
    color complement($val)
    header 
     background transparent

     h2 
        text-shadow 0 0 12px #fff
.antispam  
    display none
#map 
    width 100%
    height 100%
    min-height 400px
.wrapper
    display flex
    flex-direction row
    flex-wrap wrap
    align-items stretch
    max-width 1280px
    margin auto
    .item
        width 100%
        padding 1rem

        +above(960px)
            width 48%
    .detail
        display flex
        flex-direction row
        flex-wrap wrap
        align-items center
        justify-content center
        text-align center
        background rgba(255,255,255,0.3)
        border .5rem solid rgba(255,255,255,0.4)
        border-radius 1rem
        margin 1rem 0        
        i  
            width 50%
            font-size 4rem
            color complement($val)
        p  
            width 100%
            font-size 1.3rem
        +above(960px)
            i  
                width 20%
            p  
                width 80%
                text-align left



    form  
        display flex
        flex-direction row 
        flex-wrap wrap
        justify-content space-between
        font-size 1.3rem
        padding 1rem
        background rgba(255,255,255,0.3)
        border .5rem solid rgba(255,255,255,0.4)
        border-radius 1rem
        margin 1rem 0         

        input,textarea
            font-size 1.2rem
            padding .2rem
            width 100%
            margin-bottom 1rem
            border 3px solid complement($val)
            border-radius .5rem 
            background rgba(255,255,255,0.6)     
        .submit-btn 
            width 12rem
            border-radius .5rem
            background complement($val)
            color $val
            outline none 
            border 0
            padding 1rem
            transition all 0.5s            
        .submit-btn:hover
            transform scale(1.1)
            background $val
            color complement($val)
            transition all 0.5s
        
        +above(960px)
            input
                width 49%
    
