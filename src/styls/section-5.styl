#section-5
    padding-top 0 
    background rgba($val,1)
    color #ffffff
    header 
     background linear-gradient(left, $val, #fff, $val)

     h2 
        text-shadow 0 0 12px #fff
.antispam  
    display none
#map 
    width 100%
    height 400px
.wrapper
    display flex
    flex-direction row
    flex-wrap wrap
    .item
        width 100%
        padding 1rem
        +above(960px)
            width 50%
    .detail
        display flex
        flex-direction row
        flex-wrap wrap
        align-items center
        justify-content center
        text-align center
        padding-bottom 1.5rem
        i  
            width 50%
            font-size 4rem
            color complement($val)
        p  
            width 100%
            font-size 1.2rem
        +above(960px)
            i  
                width 20%
            p  
                width 80%
                text-align left



    form  
        display flex
        flex-direction row 
        flex-wrap wrap
        justify-content space-between
        font-size 1.3rem

        input,textarea
            font-size 1.2rem
            padding .2rem
            width 100%
            margin-bottom 1rem
            border 3px solid complement($val)
            border-radius .5rem      
        .submit-btn 
            width 12rem
            border-radius .5rem
            background complement($val)
            color #ffffff
            outline none 
            border 0
            padding 1rem
        +above(960px)
            input
                width 49%
    
